<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/v_me_vip_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_me_vip"
        app:layout_constraintEnd_toStartOf="@+id/v_me_vip"
        app:layout_constraintTop_toTopOf="@+id/v_me_vip"
        app:srcCompat="@drawable/me_vip_img" />

    <TextView
        android:id="@+id/v_me_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heiti"
        android:text="@string/vip"
        android:textColor="@color/color_vip_text"
        app:layout_constraintBottom_toBottomOf="@+id/v_me_viplevel"
        app:layout_constraintEnd_toStartOf="@+id/v_me_viplevel"
        app:layout_constraintTop_toTopOf="@+id/v_me_viplevel" />

    <TextView
        android:id="@+id/v_me_viplevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/heiti"
        android:text="@string/vip1"
        android:textColor="@color/color_vip_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/v_me_headcard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#00ffffff"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_me_vip_img">

        <ImageView
            android:id="@+id/v_me_headimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/me_head" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/v_me_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/heiti"
        android:text="..."
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_me_headcard" />

    <View
        android:id="@+id/v_me_textline"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/circle_textline_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_me_username" />

    <ImageView
        android:id="@+id/v_me_pencil"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/v_me_username"
        app:layout_constraintStart_toEndOf="@+id/v_me_username"
        app:srcCompat="@drawable/me_pencil" />
</androidx.constraintlayout.widget.ConstraintLayout>