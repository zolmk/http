<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/ic_launcher_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="23dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/v_recommend_zero_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_recommend_zero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="小饼干"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        app:layout_constraintStart_toEndOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <TextView
        android:id="@+id/tv_recommend_zero_pasttime"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text="1分钟前"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/tv_recommend_zero_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_recommend_zero_name" />

    <ImageView
        android:id="@+id/iv_recommend_zero_follow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dot_3" />

    <TextView
        android:id="@+id/tv_think_zero_text"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/test_text"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/tv_recommend_zero_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_recommend_zero_pasttime" />



</androidx.constraintlayout.widget.ConstraintLayout>